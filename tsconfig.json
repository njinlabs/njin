{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@njin-types/*": ["./src/types/*"],
      "@njin-modules/*": ["./src/modules/*"],
      "@njin-middlewares/*": ["./src/middlewares/*"],
      "@njin-utils/*": ["./src/utils/*"],
      "@njin-validations/*": ["./src/validations/*"],
      "@njin-entities/*": ["./src/database/entities/*"]
    },
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "resolveJsonModule": true
  }
}
